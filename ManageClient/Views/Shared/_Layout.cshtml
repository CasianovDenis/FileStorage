<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
   
</head>
<body id="body-pd">
   
    @if (ViewBag.hide_layout != "true")
    {
        <header class="header" id="header">
            <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>

        </header>

        <div class="l-navbar" id="nav-bar">
            <nav class="nav">
                <div>
                    <a href="#" class="nav_logo">
                        @*<i class='bx bx-layer nav_logo-icon'></i>*@
                        <img src="/icon/logo.png" style="margin-left:-40%;width:40px;height:40px"/>
                        <span class="nav_logo-name">Driver Online</span>
                    </a>

                    <div class="nav_list">
                        <img id="user_icon" src="/icon/user_icon.png" style="width: 50px; height: 50px; margin-left:2px;" />
                        <br />
                        <br />

                        <text style="color:white;margin-left:5px;">Name</text>
                        <span class="nav_name" style="margin-left:12%;color:white;">@ViewBag.Name</span>
                        <br />
                        <br />
                        <a asp-action="Index" asp-controller="Home" class="nav_link active">
                            <i class='bx bx-grid-alt nav_icon'></i>
                            <span class="nav_name">Home</span>
                        </a>

                        <a href="#" class="nav_link active">
                            <i class='bx bx-slider-alt'></i>
                            <span class="nav_name">Dashboard</span>
                        </a>

                    </div>
                </div>
                <a href="#" class="nav_link">
                    <i class='bx bx-log-out nav_icon'></i>
                    <span class="nav_name">SignOut</span>
                </a>
            </nav>
        </div>


    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()

        </main>
    </div>


    @if (ViewBag.hide_footer != "true")
    {<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - ManageClient
            </div>
        </footer>}

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Sidebar.js" ></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>